<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', {domain}) %>
</head>

<body>
    <header>
        <%- include('../partials/header', {branch, user}) %>
    </header>
    <!-- Add modal -->
    <div id="addModal" class="modal py-5 px-5">
        <!-- Modal content -->
        <div class="modal-lg modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button"
                        class="badge badge-outline-danger mx-0 my-0 px-2 py-0 d-block closeAdd close text-danger bg-light"
                        data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-wrap container-fluid search">
                        <div class="col-6 col-sm-6 py-1">
                            <label for="addStaffFullname"><small>Họ tên:</small></label>
                            <input class="w-100" placeholder="Họ tên..." type="text" id="addStaffFullname">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="addStaffPhone"><small>Số điện thoại:</small></label>
                            <input class="w-100" placeholder="Số điện thoại..." type="number" id="addStaffPhone">
                        </div>
                        <div class="col-3 col-sm-3">
                            <label for="addStaffAge"><small>Tuổi:</small></label>
                            <input class="w-100" placeholder="Tuổi.." type="number" id="addStaffAge">
                        </div>
                        <div class="col-3 col-sm-3">
                            <label for="addStaffGender"><small>Giới tính:</small></label>
                            <select id="addStaffGender">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Address"><small>Địa chỉ:</small></label>
                            <input placeholder="Địa chỉ..." type="text" id="addStaffAddress">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Email"><small>Email:</small></label>
                            <input placeholder="X@gmail.com..." type="text" id="addStaffEmail">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="addStaffRole"><small>Role:</small></label>
                            <select id="addStaffRole">
                                <option value="manager">Manager</option>
                                <option value="cashier">Cashier</option>
                                <option value="storager">Storager</option>
                            </select>
                        </div>
                        <div class="col-3 col-sm-3">
                            <label><small>Username:</small></label>
                            <input placeholder="User name..." type="text" id="addStaffUsername">
                        </div>
                        <div class="col-3 col-sm-3">
                            <label><small>Password:</small></label>
                            <input placeholder="*****" type="password" id="addStaffPassword">
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button class="rounded px-5 py-3 text-white float-right badge bg-success" id="addStaff">
                            <b class="fs-1">Thêm</b>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Edit modal -->
    <div id="editModal" class="modal py-5 px-5">
        <div class="modal-lg modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button"
                        class="badge badge-outline-danger mx-0 my-0 px-2 py-0 close closeEdit text-danger bg-light"
                        data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-wrap container-fluid search">
                        <div class="col-6 col-sm-6 py-1">
                            <label for="fullname">Họ tên:</label>
                            <input placeholder="họ tên..." type="text" id="updateStaffFullname">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Age">Tuổi:</label>
                            <input placeholder="tuổi..." type="text" id="updateStaffAge">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Phone">Số điện thoại:</label>
                            <input placeholder="0X XXX..." type="text" id="updateStaffPhone">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Gender">Giới tính:</label>
                            <select id="updateStaffGender">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Address">Địa chỉ:</label>
                            <input type="text" placeholder="địa chỉ..." id="updateStaffAddress">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Email">Email:</label>
                            <input placeholder="X@gmail.com..." type="text" id="updateStaffEmail">
                        </div>
                        <div class="col-6 col-sm-6 py-1 d-flex flex-column justify-content-center">
                            <label for="Role">Role:</label>
                            <select id="updateStaffRole">
                                <option value="manager">Manager</option>
                                <option value="cashier">Cashier</option>
                                <option value="storager">Storager</option>
                            </select>
                        </div>
                        <input type="hidden" id="updateStaffId">


                    </div>
                    <button class="rounded px-5 py-3 text-white float-right badge bg-success" id="updateStaff">
                        <b class="fs-1">Sửa</b>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-scroller">
        <%- include('../partials/sidebar',{branch}) %>
            <div class="container-fluid page-body-wrapper">
                <!-- The Modal -->
                <div class="main-panel pt-0">
                    <div class="content-wrapper">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Staff</h4>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Full name</th>
                                                <th>Age</th>
                                                <th>Phone</th>
                                                <th>Gender</th>
                                                <th>Address</th>
                                                <th>Email</th>
                                                <th>Role</th>
                                                <th>
                                                    <a class="badge badge-outline-success w-100 fs-1" id="add"
                                                        href="javascript:void(0)"><i
                                                            class="mdi mdi-plus-circle-multiple-outline"></i>
                                                        Add</a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% staffs.slice(0,20).forEach(staff=> { %>
                                                <tr id="staff-<%- staff.id; %>">
                                                    <td>
                                                        <%- staff.id %>
                                                    </td>
                                                    <td>
                                                        <%- staff.full_name %>
                                                    </td>
                                                    <td>
                                                        <%- staff.age %>
                                                    </td>
                                                    <td>
                                                        <%- staff.phone %>
                                                    </td>
                                                    <td>
                                                        <%- staff.gender %>
                                                    </td>
                                                    <td class="limit-wordStaff">
                                                        <%- staff.address %>
                                                    </td>
                                                    <td>
                                                        <%- staff.email %>
                                                    </td>
                                                    <td>
                                                        <%- staff.role %>
                                                    </td>
                                                    <td>
                                                        <% if(staff.role=='admin' ){ %>
                                                            <% } else { %>
                                                                <a href="javascript:void(0)"
                                                                    class="badge badge-outline-warning"
                                                                    onclick="getStaff(this)"
                                                                    data-id="<%- staff.id %>">Edit</a>
                                                                <a href="javascript:void(0)"
                                                                    class="badge badge-outline-danger"
                                                                    onclick="deleteStaff(this)"
                                                                    data-id="<%- staff.id %>">Delete</a>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <%- include('../partials/foot') %>
        <%- include('../partials/footer') %>
</body>

</html>