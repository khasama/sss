<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', {domain}) %>
</head>

<body>
    <header>
        <%- include('../partials/header', {branch, user}) %>
    </header>
    <div class="container-scroller">
        <%- include('../partials/sidebar',{branch}) %>
            <div class="container-fluid page-body-wrapper">
                <!-- The Modal -->
                <div class="main-panel pt-0">
                    <div class="content-wrapper">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Category</h4>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>HÃ£ng</th>
                                                <th>
                                                    <a class="badge badge-outline-success w-100 fs-1" id="add"
                                                        href="javascript:void(0)"><i
                                                            class="mdi mdi-plus-circle-multiple-outline"></i>
                                                        Add</a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% categories.forEach(category=> { %>
                                                <tr id="category-<%- category.id; %>">
                                                    <td>
                                                        <%- category.id; %>
                                                    </td>
                                                    <td class="limit-word">
                                                        <%- category.category %>
                                                    </td>
                                                    <td>
                                                        <%- product.deleted ? 'True' : 'False' %>
                                                    </td>
                                                    <td>
                                                        <a id="edit" class="badge badge-outline-warning"
                                                            href="javascript:void(0)" data-id="<%- category.id %>"
                                                            onclick="getCategory(this)">Edit</a>
                                                        <a class="badge badge-outline-danger" href="javascript:void(0)"
                                                            data-id="<%- category.id %>"
                                                            onclick="deleteCategory(this)">Delete</a>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </div>
    <%- include('../partials/foot') %>
</body>

</html>