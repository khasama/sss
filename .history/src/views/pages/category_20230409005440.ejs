<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', {domain}) %>
</head>

<body>
    <header>
        <%- include('../partials/header', {branch, user}) %>
    </header>

    <div class="container-scroller">
        <%- include('../partials/sidebar',{branch}) %>
            <div class="container-fluid page-body-wrapper">
                <!-- The Modal -->
                <div class="main-panel pt-0">
                    <div class="content-wrapper">
                        <div class="card">
                            <div class="card-body pr-0">
                                <h4 class="card-title">Category</h4>
                                <div class="container-fluid d-flex flex-column">
                                    <div class="row">
                                        <div class="table-responsive col-lg-8 col-12 col-sm-12">
                                            <table style="border: 1px #000 solid;">
                                                <thead>
                                                    <tr>
                                                        <th style="border: 1px #000 solid;">ID</th>
                                                        <th style="border: 1px #000 solid;">Hãng</th>
                                                        <th style="border: 1px #000 solid;">
                                                            <a href="javascript:void(0)">🛠</a>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% categories.forEach(category=> { %>
                                                        <tr id="category-<%- category.id; %>">
                                                            <td style="border: 1px #000 solid;">
                                                                <%- category.id; %>
                                                            </td>
                                                            <td style="border: 1px #000 solid;">
                                                                <%- category.category %>
                                                            </td>
                                                            <td style="border: 1px #000 solid;">
                                                                <a href="javascript:void(0)" onclick="getCategory(this)"
                                                                    data-id="<%- category.id %>">Edit</a>
                                                                <a href="javascript:void(0)" style="color: red;"
                                                                    onclick="deleteCategory(this)"
                                                                    data-id="<%- category.id %>">Delete</a>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="col-12 col-lg-4 col-sm-12">
                                            <div class=" py-4 px-4 modal-content border border-5 rounded">
                                                <h4>Cập nhật</h4>
                                                <label for="category"><small>Hãng:</small></label>
                                                <input placeholder="Chọn nhãn hàng.." type="text"
                                                    id="updateCategoryName">
                                                <input type="hidden" id="updateCategoryId">
                                                <button
                                                    class="text-white bg-primary badge py-2 w-75 align-self-center mt-2"
                                                    id="updateCategory">
                                                    <i
                                                        class="display-4 justify-content-center mdi d-flex mdi-circle-edit-outline"></i><b>Sửa</b></button>
                                            </div>
                                            <br>
                                            <div class=" py-4 px-4 modal-content border border-5 rounded">
                                                <h4>Thêm</h4>

                                                <label for="category"><small>Hãng:</small></label>
                                                <input placeholder="Nhãn hàng mới.." type="text" id="addCategoryName">

                                                <button
                                                    class="text-white bg-success badge py-2 w-75 align-self-center mt-2"
                                                    id="addCategory">
                                                    <i
                                                        class="display-4 justify-content-center mdi d-flex mdi-plus"></i><b>Thêm</b></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </div>
    <%- include('../partials/foot') %>
        <%- include('../partials/footer') %>
</body>

</html>