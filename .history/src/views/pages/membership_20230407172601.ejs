<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', {domain}) %>
</head>

<body>
    <header>
        <%- include('../partials/header', {branch, user}) %>
    </header>
    <!-- Add modal -->
    <div id="addModal" class="modal py-5 px-5">
        <!-- Modal content -->
        <div class="modal-lg modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button"
                        class="badge badge-outline-danger mx-0 my-0 px-2 py-0 d-block closeAdd close text-danger bg-light"
                        data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-wrap container-fluid search">
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Name"><small>Tên thành viên:</small></label>
                            <input class="w-100" placeholder="Họ tên..." type="text" id="addMemberName">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Phone"><small>Số điện thoại:</small></label>
                            <input class="w-100" placeholder="Số điện thoại..." type="number" id="addMemberPhone">
                        </div>
                        <div class="col-3 col-sm-3">
                            <label for="Level"><small>Level:</small></label>
                            <input class="w-100" placeholder="0" type="number" id="addMemberLevel">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button class="rounded px-5 py-3 text-white float-right badge bg-success" id="addMember">
                            <b class="fs-1">Thêm</b>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Edit modal -->
    <div id="editModal" class="modal py-5 px-5">
        <div class="modal-lg modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button"
                        class="badge badge-outline-danger mx-0 my-0 px-2 py-0 close closeEdit text-danger bg-light"
                        data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-wrap container-fluid search">
                        <div class="col-6 col-sm-6 py-1">
                            <label for="fullname">Họ tên:</label>
                            <input placeholder="họ tên..." type="text" id="updateStaffFullname">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Age">Tuổi:</label>
                            <input placeholder="tuổi..." type="text" id="updateStaffAge">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Phone">Số điện thoại:</label>
                            <input placeholder="0X XXX..." type="text" id="updateStaffPhone">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Gender">Giới tính:</label>
                            <select id="updateStaffGender">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Address">Địa chỉ:</label>
                            <input type="text" placeholder="địa chỉ..." id="updateStaffAddress">
                        </div>
                        <div class="col-6 col-sm-6 py-1">
                            <label for="Email">Email:</label>
                            <input placeholder="X@gmail.com..." type="text" id="updateStaffEmail">
                        </div>
                        <div class="col-6 col-sm-6 py-1 d-flex flex-column justify-content-center">
                            <label for="Role">Role:</label>
                            <select id="updateStaffRole">
                                <option value="manager">Manager</option>
                                <option value="cashier">Cashier</option>
                                <option value="storager">Storager</option>
                            </select>
                        </div>
                        <input type="hidden" id="updateStaffId">


                    </div>
                    <button class="rounded px-5 py-3 text-white float-right badge bg-success" id="updateStaff">
                        <b class="fs-1">Sửa</b>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-scroller">
        <%- include('../partials/sidebar',{branch}) %>
            <!-- The Modal -->
            <div class="main-panel pt-0">
                <div class="content-wrapper">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Quản lý Thành viên</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Phone</th>
                                            <th>Level</th>
                                            <th>Deleted</th>
                                            <th>
                                                <a class="badge badge-outline-success w-100 fs-1" id="add"
                                                    href="javascript:void(0)"><i
                                                        class="mdi mdi-plus-circle-multiple-outline"></i>
                                                    Add</a>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% memberships.slice(0,20).forEach(membership=> { %>
                                            <tr id="membership-<%- membership.id; %>">
                                                <td>
                                                    <%- membership.id %>
                                                </td>
                                                <td class="limit-word">
                                                    <%- membership.name %>
                                                </td>
                                                <td>
                                                    <%- membership.phone %>
                                                </td>
                                                <td>
                                                    <%- membership.level %>
                                                </td>
                                                <td>
                                                    <%- membership.deleted ? 'True' : 'False' %>
                                                </td>
                                                <td>
                                                    <a href="javascript:void(0)" onclick="getMembership(this)"
                                                        class="badge badge-outline-warning"
                                                        data-id="<%- membership.id %>">Edit</a>
                                                    <a href="javascript:void(0)" onclick="deleteMembership(this)"
                                                        class="badge badge-outline-danger"
                                                        data-id="<%- membership.id %>">Delete</a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <%- include('../partials/foot') %>
        <%- include('../partials/footer') %>
</body>

</html>